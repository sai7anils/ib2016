/! HEADER
header.c-layout-header.c-layout-header-2.c-layout-header-dark-mobile.c-header-transparent-dark.header-normal data-minimize-offset="80"
  .c-navbar style=("height:71px;background:url('#{asset_path('base/img/content/backgrounds/inner-BG.jpg')}')")
    .container

      .c-navbar-wrapper.clearfix

        .c-brand.c-pull-left
          = link_to root_path, class: 'c-logo' do
            = image_tag asset_path('base/img/Ideaburn-logo.png'), class: 'c-desktop-logo', alt: ''
            = image_tag asset_path('base/img/Ideaburn-logo.png'), class: 'c-desktop-logo-inverse', alt: '', style: 'margin-bottom:5px;'
            = image_tag asset_path('base/img/Ideaburn-logo.png'), class: 'c-mobile-logo', alt: ''
          button.c-hor-nav-toggler type="button" data-target=".c-mega-menu"
            span.c-line
            span.c-line
            span.c-line

        form.c-quick-search action="#"
          input type="text" name="query" placeholder=(t('header.type_to_search')) value="" class="form-control" autocomplete="off"
          span.c-theme-link &times;

        nav.c-mega-menu.c-pull-right.c-mega-menu-dark.c-mega-menu-dark-mobile.c-theme.c-fonts-uppercase.c-fonts-bold
          ul.nav.navbar-nav.c-theme-nav
            li#entrepreneur.menu-nav
              a.c-link.dropdown-toggle = t('header.entrepreneurs')
            li#investor.menu-nav
              a.c-link.dropdown-toggle = t('header.investors')
            li#startup.menu-nav
              a.c-link.dropdown-toggle = t('header.startups')
            li#startupevent.menu-nav
              a.c-link.dropdown-toggle = t('header.startup_events')
            - if current_user
                li.login
                  = link_to t('header.profile'), edit_user_registration_path, class: "m60 c-btn-border-opacity-04 c-btn btn-no-focus c-btn-header btn btn-sm c-btn-border-1x c-btn-white  c-btn-uppercase c-btn-sbold"
                li.singup
                  = link_to t('header.logout'), destroy_user_session_path, method: :delete, class: "mlr0 rec-btn-border-opacity-04 c-btn btn-no-focus c-btn-header btn btn-sm c-btn-border-1x c-btn-white  c-btn-uppercase c-btn-sbold", style: "background:#FFD101;border-color:#FFD101;"
            - else
                li.login
                  = link_to t('header.login'), new_user_session_path, class: "m60 c-btn-border-opacity-04 c-btn btn-no-focus c-btn-header btn btn-sm c-btn-border-1x c-btn-white  c-btn-uppercase c-btn-sbold"
                li.singup
                  = link_to t('header.signup'), new_user_registration_path, class: "mlr0 rec-btn-border-opacity-04 c-btn btn-no-focus c-btn-header btn btn-sm c-btn-border-1x c-btn-white  c-btn-uppercase c-btn-sbold", style: "background:#FFD101;border-color:#FFD101;"
            li
              button.btn-nav
                .bar.arrow-top-r
                .bar.arrow-middle-r
                .bar.arrow-bottom-r
      nav.nav-container.hidden.hideNav
        ul.nav-list
          li.list-item
            = link_to t('navabar.behind_it_thoughts'), home_behindIT_path
          li.list-item
            = link_to t('navabar.terms_of_use'), home_terms_path
          li.list-item
            = link_to t('navabar.privacy_policy'), "#"
          li.list-item
            = link_to t('navabar.what_next'), "#"
          li.list-item
            = link_to t('navabar.contact_us'), "#"

        .c-section.c-section-social
          .social-line
          .socialicon
            ul.list-inline.list-unstyled
              li
                = link_to "http://www.facebook.com/ideaburns" do
                  = image_tag asset_path('base/img/f.png')
              li
                = link_to "http://www.twitter.com/ideaburns" do
                  = image_tag asset_path('base/img/T.png')
              li
                = link_to "http://www.linkedin.com/ideaburns" do
                  = image_tag asset_path('base/img/In.png')
              li
                = link_to "http://www.instagram.com/ideaburns" do
                  = image_tag asset_path('base/img/Instagram.png'), class: 'socicon-last-child'
nav.c-layout-quick-sidebar
  .c-header
    button.c-link.c-close type="button"

  .c-content
    .c-section
      h4 = link_to t('navabar.behind_it_thoughts'), "#"
    .c-section
