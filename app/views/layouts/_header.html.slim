    .c-section
      h4 = link_to t('navabar.privacy_policy'), "#"
    .c-section
      h4 = link_to t('navabar.what_next'), "#"
    .c-section
      h4 = link_to t('navabar.contact_us'), "#"
    .c-section.c-section-social
      .social-line
      .socialicon
        = link_to "#" do
          = image_tag asset_path('base/img/Toggle-SocialIcons.png')
