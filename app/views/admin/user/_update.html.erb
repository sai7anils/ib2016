<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>UPDATE PASSWORD</h4>
      </div>
      <div class="panel-body">
        <div class="update-password-form">
          <%= simple_form_for(@user, url: admin_user_path, html: { method: :put, class: 'update-pwd-form', id: 'update-pwd-form' }) do |f| %>
            <% if flash[:update_success] %>
              <div class="alert alert-success">
                <b>Well done!</b> Password has been updated successfully.
              </div>
            <% end %>
            <% if flash[:update_errors] %>
              <div class="alert alert-danger form-error-messages">
                <div id="error_explanation">
                  <h2>1 error prohibited this user from being saved:</h2>
                  <ul><li><%= flash[:update_errors] %></li></ul>
                </div>
              </div>
            <% end %>
            <%= f.hidden_field :reset_password_token %>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.text_field :email, class: 'form-control', disabled: true %>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :current_password %> <i>(Your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, class: 'form-control', placeholder: 'Current password', disabled: (current_user.admin? && current_user.id != @user.id ? true : false), required: (current_user.admin? && current_user.id == @user.id ? true : false) %>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :password, "New Password" %><br />
                <%= f.password_field :password, :autocomplete => "off", class: 'form-control', placeholder: 'New password', required: true  %>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :password_confirmation, "New Password Confirmation" %><br />
                <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'New password confirmation', required: true %>
              </div>
            </div>

            <div class="footer">
              <div class="col-sm-12 text-right">
                <button onclick="clearForm()" id="clear-form" type="button" class="btn btn-danger">Clear</button>
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="panel-footer">
      </div>
    </div>
  </div>
</div><!--/.row-->
