javascript:
  $(document).ready(function () {
    $('.btn-submit-form').click(function(){
      if($('input[name="investor_identity[indentity_proof]"]').val() == ''){
        $('.alert-danger').removeClass('hide');
      }else{
        $('.new_investor_identity').submit();
      }
    });
    
    $('#modalIdentity').on('hidden.bs.modal', function (e) {
      $('.alert-danger').addClass('hide');
    });

  });
