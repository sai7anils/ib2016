#page-wrapper
  .switches
    .acount-section
      .acount-title.container-fluid
        h2 Fund Startup
        ul.list-menu
          li#product.active
            .icon 
              = image_tag 'icon-product.png'
              .line
            h6 Product & Services
          li
            .icon 
              = image_tag 'icon-potential.png'
              .line
            h6 Business Potential
          li
            .icon 
              = image_tag 'icon-dollar.png'
              .line
