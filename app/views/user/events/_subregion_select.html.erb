<div id="order_state_code_wrapper">
  <% parent_region ||= params[:parent_region] %>
  <% country = Carmen::Country.coded(parent_region) %>
  <% if country.nil? %>
    <%= text_field(:event, :region, disabled: '', placeholder: t('event.pls_select_country')) %>
  <% elsif country.subregions? %>
    <%= subregion_select(:event, :region, parent_region) %>
  <% else %>
    <%= text_field(:event, :region, placeholder: 'e.g California', required: true) %>
  <% end %>
</div>
